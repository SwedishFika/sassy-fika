{{!< default}}
{{> header}}
<main class="main" role="main">
{{#foreach posts}}
	{{#if @first}} 
	<article class="featured-post" role="article" itemscope itemtype="http://schema.org/Article">
		<header class="weighty-post-header">
			<h1 class="post-title" itemprop="headline"><a href="{{{url}}}" rel="bookmark">{{title}} den f√∂rsta</a></h1>
			<img class="featured-image" src="/assets/images/article.jpg">
		</header>
		
		<time class="date" datetime="{{date format="YYYY-MM-DD"}}" itemprop="datePublished">{{date format='dddd DD MMM YYYY'}}</time>
		<div class="postcontent" itemprop="articleBody">
			{{content}}
		</div>
		{{#if tags}}
			<div class="posttags">
				Tags: {{tags separator=" | "}}
			</div>
		{{/if}}
	</article>
	{{else}}
	<article role="article" itemscope itemtype="http://schema.org/Article">
		<header class="post-header">
			<h1 class="post-title" itemprop="headline"><a href="{{{url}}}" rel="bookmark">{{title}}</a></h1>
		</header>
		<time class="date" datetime="{{date format="YYYY-MM-DD"}}" itemprop="datePublished">{{date format='dddd DD MMM YYYY'}}</time>
		<div class="postcontent" itemprop="articleBody">
			{{content}}
		</div>
		{{#if tags}}
			<div class="posttags">
				Tags: {{tags separator=" | "}}
			</div>
		{{/if}}
	</article>
	{{/if}}
{{/foreach}}


{{#if pagination}}
	<div class="pagination">
		{{{pagination}}}
	</div>
{{/if}}

</main>
{{> footer}}